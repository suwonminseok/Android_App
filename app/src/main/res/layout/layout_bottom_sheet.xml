<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:clipToPadding="true"
    android:orientation="vertical"

    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_behavior"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bottom_layout_donwbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/double_down_arrow"
                android:scaleType="center"
                android:background="#00ff0000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/layout_up"/>

            <ImageButton
                android:id="@+id/bottom_layout_upbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:background="#00ff0000"
                android:scaleType="center"
                android:src="@drawable/double_up_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25" />

            <ImageButton
                android:id="@+id/bottom_Child_Image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="3.75"
                android:background="@color/white"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bottom_Child_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="최근위치"/>

                <TextView
                    android:id="@+id/bottom_child_subtitle_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/bottom_child_subtitle_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageButton
                android:id="@+id/bottom_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/call_button"
                android:src="@drawable/call" />

            <ImageButton
                android:id="@+id/bottom_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/message_button"
                android:src="@drawable/message"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bottom_spinner_sub"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7" />

                <Spinner
                    android:id="@+id/bottom_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:id="@+id/bottom_walk_speen_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@drawable/bottom_noclick_image_button">

                    <ImageButton
                        android:id="@+id/bottom_walk_speed_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/walk_speed"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:background="@drawable/button_round"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bottom_walk_speed_id"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="    걷는속도"/>

                        <TextView
                            android:id="@+id/bottom_child_walk_speed"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:id="@+id/bottom_average_walk_speed_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@drawable/bottom_noclick_image_button">

                    <ImageButton
                        android:id="@+id/bottom_average_walk_speed_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/run_speed"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:background="@drawable/button_round"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bottom_averge_walk_speed_id"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="    분당속도"/>

                        <TextView
                            android:id="@+id/bottom_child_run_speed"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:id="@+id/bottom_stepcount_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@drawable/bottom_noclick_image_button">

                    <ImageButton
                        android:id="@+id/bottom_stepcount_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/step_count"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:background="@drawable/button_round"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bottom_stepcount_id"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="    걸음수"/>

                        <TextView
                            android:id="@+id/bottom_child_stepcount"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"/>


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:id="@+id/bottom_distance_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@drawable/bottom_noclick_image_button">

                    <ImageButton
                        android:id="@+id/bottom_distance_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/distance"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:background="@drawable/button_round"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bottom_distance_id"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="    이동거리"/>

                        <TextView
                            android:id="@+id/bottom_child_distance"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Line_Chart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_weight="8">

            </com.github.mikephil.charting.charts.LineChart>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>